<Window x:Class="PlannerApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration"
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen" Height="768" Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть с изображением -->
        <Grid Grid.Column="0" Margin="20">
            <Image Source="/Images/Registration.png" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Stretch="UniformToFill" Margin="10,54,0,0"/>
        </Grid>

        <!-- Правая часть с формой -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="544" Height="597">

            <!-- Заголовок -->
            <TextBlock Text="Sign Up" FontSize="30" FontWeight="Bold" Height="72" HorizontalAlignment="Center"/>

            <!-- First Name -->
            <TextBox Name="FirstNameBox" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Text="Enter First Name" 
                     Height="40" FontSize="16" Margin="0,10" FontFamily="Verdana"/>
            <!-- Last Name -->
            <TextBox Name="LastNameBox" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Text="Enter Last Name" 
                     Height="40" FontSize="16" Margin="0,10" FontFamily="Verdana"/>
            <!-- Username -->
            <TextBox Name="UsernameBox" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Text="Enter Username" 
                     Height="40" FontSize="16" Margin="0,10" FontFamily="Verdana"/>
            <!-- Email -->
            <TextBox Name="EmailBox" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Text="Enter Email" 
                     Height="40" FontSize="16" Margin="0,10" FontFamily="Verdana"/>

            <!-- Password -->
            <Grid Height="40" Margin="0,10">
                <TextBlock Name="PasswordPlaceholder" 
                           Text="Password" 
                           Foreground="Gray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           MouseDown="PasswordPlaceholder_MouseDown"/>
                <PasswordBox Name="PasswordBox" 
                             GotFocus="PasswordBox_GotFocus" 
                             LostFocus="PasswordBox_LostFocus" 
                             PasswordChanged="PasswordBox_PasswordChanged" 
                             Height="40" FontSize="16"/>
            </Grid>

            <!-- Confirm Password -->
            <Grid Height="40" Margin="0,10">
                <TextBlock Name="ConfirmPasswordPlaceholder" 
                           Text="Confirm Password" 
                           Foreground="Gray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           MouseDown="PasswordPlaceholder_MouseDown"/>
                <PasswordBox Name="ConfirmPasswordBox" 
                             GotFocus="PasswordBox_GotFocus" 
                             LostFocus="PasswordBox_LostFocus" 
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged" 
                             Height="40" FontSize="16"/>
            </Grid>

            <!-- Sign Up Button -->
            <Button Content="Sign Up" 
                    Click="RegisterButton_Click" 
                    Height="40" 
                    Width="200" 
                    Background="#FF68A37E" 
                    Foreground="White" 
                    VerticalAlignment="Center" 
                    Margin="0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Already have an account?" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Log In" Click="LoginButton_Click" Background="Transparent" Foreground="#FF68A37E" FontSize="16" VerticalAlignment="Center" BorderBrush="Transparent"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
