<Window x:Class="PlannerApp.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerApp.ViewModels"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="768" Width="1366" >


    <Window.Resources>
        <local:TakeFirstTwoConverter x:Key="TakeFirstTwoConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Верхнее меню -->
        <DockPanel Height="100" Background="#F8F8F8" VerticalAlignment="Top" Margin="0,0,0,10">
            <DockPanel.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
            </DockPanel.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="90,30,0,0">
                <TextBlock Text="Task" Foreground="#41AB49" FontSize="32" FontWeight="SemiBold"/>
                <TextBlock Text="Track" Foreground="Black" FontSize="32" FontWeight="SemiBold" Margin="5,0,0,0" Width="82"/>
            </StackPanel>
            <Grid Width="695" Height="40" Margin="166,0" HorizontalAlignment="Center">
                <TextBox Width="695" Height="40" Background="#F5F8FF" Padding="10" VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderThickness="0"  
                                                Padding="{TemplateBinding Padding}">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                    <TextBox.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </TextBox.Effect>
                </TextBox>
                <TextBlock Text="Search your task here..." VerticalAlignment="Center" HorizontalAlignment="Left" Padding="15,0,0,0" Foreground="Gray" IsHitTestVisible="False"
                           Visibility="{Binding Text.Length, ElementName=textBox, Converter={StaticResource TakeFirstTwoConverter}}"/>

                <Button Width="40" Height="40" Background="#41AB49" Foreground="White" BorderThickness="0"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Image Source="/images/search.png" Width="15" Height="15"/>
                </Button>

            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,90,0">
                <Button Width="40" Height="40" Background="#41AB49" Foreground="White" BorderThickness="0"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Image Source="images/notification.png" Width="15" Height="15"/>
                </Button>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="10,30">
                    <TextBlock Text="{Binding CurrentDay}" Foreground="Black" FontSize="15" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentDate}" Foreground="#3ABEFF" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
                <Button Width="40" Height="40" Background="#41AB49" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Image Source="images/calendar.png" Width="15" Height="15"/>
                </Button>
            </StackPanel>
        </DockPanel>

        <Grid Margin="0,80,0,-230">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="365"/>
                <ColumnDefinition Width="1050"/>
            </Grid.ColumnDefinitions>

            <!-- Боковое меню -->

            <Grid Height="550"  VerticalAlignment="Top" Margin="0,0,0,0">
                <Border Background="#408057" CornerRadius="8"
    BorderBrush="#A1A3AB" BorderThickness="1" Margin="0,0,0,0" Height="660" VerticalAlignment="Top">

                    <StackPanel Margin="10">
                        <Ellipse Width="70" Height="70"  Margin="0,10,0,10">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarBrush" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <StackPanel VerticalAlignment="Bottom">
                            <TextBlock Name="UsernameText" Text="Asel" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="EmailText" Text="asel@gmail.com" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>



                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="59" BorderThickness="0" HorizontalAlignment="Left" Margin="50,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/dashboard.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center" Width="118"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="59" BorderThickness="0" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="images/statitics.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="Statistics" VerticalAlignment="Center" Width="118"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="59" BorderThickness="0" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="images/my task.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="My Task" VerticalAlignment="Center" Width="116"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="59" BorderThickness="0" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="images/mycategories.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="Task Categories" VerticalAlignment="Center" Width="113"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="59" BorderThickness="0" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="images/settings.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center" Width="116"/>
                            </StackPanel>
                        </Button>

                        <Button Background="Transparent" Foreground="White" FontSize="16" Height="66" BorderThickness="0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="images/logout.png" Width="15" Height="15" Margin="0,0,10,0"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Основная область -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,0,0,0">
            <Grid Grid.Column="1" Margin="20,119,20,10">
                <Border Background="#F5F8FF" CornerRadius="16" Padding="20" Margin="40,-46,40,48"
                        BorderBrush="#A1A3AB" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="281*"/>
                                <ColumnDefinition Width="607*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Add New Task" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"  Margin="10,0,10,0" Grid.ColumnSpan="2"/>
                            <TextBlock Text="Go Back" Foreground="Black" FontSize="14" FontWeight="SemiBold"
                                       TextDecorations="Underline" HorizontalAlignment="Left" Margin="545,10,0,10" Cursor="Hand" Grid.Column="1"/>
                        </Grid>
                        <Border Grid.Row="1" Background="Transparent" Padding="10" Margin="5,29,5,10"
                                BorderBrush="#A1A3AB" BorderThickness="1">
                            <StackPanel Margin="10">
                                <TextBlock Text="Title" FontSize="14" FontWeight="SemiBold"/>
                                <TextBox Name="titleTextbox" Width="500" Height="43" Background="Transparent" Margin="0, 10, 330, 0" Padding="10"
                                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                BorderThickness="1"  
                                                                BorderBrush="#A1A3AB"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <StackPanel Orientation="Vertical" Width="235">
                                        <TextBlock Text="Date" FontSize="14" FontWeight="SemiBold" Margin="0, 0, 0, 5"/>
                                        <Grid Width="235" Height="43">
                                            <Border Background="Transparent"
                                                    CornerRadius="6"
                                                    BorderBrush="#A1A3AB"
                                                    BorderThickness="1"
                                                    Padding="10">
                                                <Grid>
                                                    <DatePicker x:Name="dateTextbox"
                                                                Background="Transparent"
                                                                Padding="10"
                                                                BorderThickness="0"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center"
                                                                SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <Image Source="/images/calendar_gre.png"
                                                           Width="24" Height="24"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,5,0"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </StackPanel>

                                    <Rectangle Width="30"/>

                                    <StackPanel Orientation="Vertical" Width="235">
                                        <TextBlock Text="Time" FontSize="14" FontWeight="SemiBold" Margin="0, 0, 0, 5"/>
                                        <Grid Width="235" Height="43">
                                            <Border Background="Transparent"
                                                    CornerRadius="6"
                                                    BorderBrush="#A1A3AB"
                                                    BorderThickness="1"
                                                    Padding="10">
                                                <Grid>
                                                    <TextBox x:Name="timeTextbox"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Padding="10"
                                                             VerticalContentAlignment="Center"
                                                             Foreground="Black"
                                                             Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <Image Source="/images/time.png"
                                                           Width="24" Height="24"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,5,0"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="Repeat" FontSize="14" FontWeight="SemiBold" Margin="0, 10, 0, 0"/>
                                <Button x:Name="RepeatButton" Width="276" Height="43" Margin="0,10,330,0"
                                        Background="Transparent" FontWeight="SemiBold" Foreground="#A1A3AB"
                                        Command="{Binding RepeatCommand}" HorizontalAlignment="Left">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="#A1A3AB"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="10">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding RepeatSummary}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <Image Source="/images/repeat.png" Width="24" Height="24" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <TextBlock Text="Category" FontSize="14" FontWeight="SemiBold" Margin="0, 10, 0, 0"/>
                                <TextBox Name="CategoryTextbox" Width="500" Height="43" Background="Transparent" Margin="0, 10, 330, 0" Padding="10"
                                         Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                BorderThickness="1"  
                                                                BorderBrush="#A1A3AB"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBlock Text="Task Description" FontSize="14" FontWeight="SemiBold" Margin="0, 10, 0, 0"/>
                                <TextBox Name="descriptionTextbox" Width="500" Height="188" Background="Transparent" Margin="0, 10, 330, 0" Padding="10"
                                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                BorderThickness="1"  
                                                                BorderBrush="#A1A3AB"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </Border>

                        <Button Grid.Row="2" Content="Done" Background="#408057" Foreground="White" BorderThickness="0"
                                Width="120" Height="35" HorizontalAlignment="Left" Margin="20,10,0,0"
                                Command="{Binding SaveCommand}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>

</Window>
